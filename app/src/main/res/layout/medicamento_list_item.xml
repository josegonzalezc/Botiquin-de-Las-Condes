<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_nombre"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Nombre"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/textview_laboratorio"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Laboratorio"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/textview_precio_normal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Precio normal"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/textview_descuento"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Descuento"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/textview_precio_descuento"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Precio descuento"
        android:textColor="@android:color/black"/>

</LinearLayout>